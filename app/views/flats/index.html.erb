<div class="container mt-3">
  <h2>All our flats:</h2>
  <h5>Total: <%= @flats.count %> flats</h4>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @flats.each do |flat| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h4 class="card-title"><%= flat.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h4>
          <p class="card-text"><%= flat.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
              <i class="fas fa-users"></i> <%= flat.number_of_guests %>
            </div>
            <div>
              <i class="fas fa-money-bill-alt"></i> <%= flat.price_per_night %>.00
            </div>
        </div>
          <%= link_to 'Details', flat_path(flat.id), class: "btn btn-info" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
